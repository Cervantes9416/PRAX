@inherits DetailCompanyBase
@page "/companies/detail/{CompanyID:int}"

<h4 class="mat-h4 mb-1">Informacion de Compañia</h4>

<div class="card mat-elevation-z4">
    <div class="card-body">
        @if (Company != null)
        {
            <MatTabGroup Style="min-height:90vh;">
                <MatTab Label="Datos Generales">
                    <CompanyForm Company="Company" ReadOnly="true"/>
                </MatTab>
                <MatTab Label="Polizas">
                    @if (Companies != null)
                    {
                        <div class="mt-2 animated fadeInLeft">
                            <ListInsurance Insurances="Companies"></ListInsurance>
                        </div>
                    }
                </MatTab>
                <MatTab Label="Fianzas">

                </MatTab>
                @*
                <MatTab Label="Ejecutivos de la empresa">

                </MatTab>
                *@
            </MatTabGroup>
        }
    </div>
</div>

