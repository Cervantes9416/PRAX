@using PRAXYS.Commons.Entities.Client

<div class="form-row">
    <div class="form-group col-12 col-md-4">
        <MatTextField ReadOnly="@ReadOnly" @bind-Value="@Client.LastName" Label="Apellido Paterno" Style="width:100%;"></MatTextField>
    </div>
    <div class="form-group col-12 col-md-4">
        <MatTextField ReadOnly="@ReadOnly" @bind-Value="@Client.SecondLastName" Label="Apellido Materno" Style="width:100%;"></MatTextField>
    </div>
    <div class="form-group col-12 col-md-4">
        <MatTextField ReadOnly="@ReadOnly" @bind-Value="@Client.Name" Label="Nombre(s)" Style="width:100%;"></MatTextField>
    </div>

    <div class="form-group col-md-2">
        <MatSelect Disabled="@ReadOnly" Label="Genero" Enhanced="true" @bind-Value="Client.Gender" Style="width:100%;">
            <MatOption Value=""></MatOption>
            <MatOption Value="M">Masculino</MatOption>
            <MatOption Value="F">Femenino</MatOption>
        </MatSelect>
    </div>
    <div class="form-group col-md-3">
        <MatDatePicker Disabled="@ReadOnly" Style="width:100%;" Label="Fecha de nacimiento" @bind-Value="Client.DayOfBirth" DateFormat="d-m-Y"></MatDatePicker>
    </div>
</div>

@code {
    [Parameter] public ClientModel Client { get; set; }
    [Parameter] public bool ReadOnly {get;set;}
}
