@inherits EndorsementChangeDireccionBase

    <div class="animated fadeIn fast">
        @if (Insurance != null && Endorsement != null)
        {
            <div class="card-box">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-4">
                            <MatDatePicker Style="width:100%;" Label="Fecha Desde" @bind-Value="Endorsement.ValidFrom" DateFormat="d-m-Y"></MatDatePicker>
                        </div>
                        <div class="col-lg-4">
                            <MatDatePicker Style="width:100%;" Label="Fecha Hasta" @bind-Value="Endorsement.ValidFrom" DateFormat="d-m-Y"></MatDatePicker>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    Datos del Endoso
                </div>
                <div class="card-body">
                    <div class="col-12">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label class="d-block">Direccion Actual</label>
                                <label class="text-info">@Insurance.Address.AddressLine</label>
                            </div>
                            <div class="form-group col-lg-6">
                                @if (Addresses != null)
                                {
                                    <label>Direccion Nueva</label>
                                    <select @bind="Insurance.AddressID " class="form-control">
                                        <option>Seleccionar..</option>
                                        @foreach (var item in Addresses)
                                        {
                                            <option value="@item.ID">@item.AddressLine - @item.City - @item.StreetAddress</option>
                                        }
                                    </select>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-box">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Concepto</label>
                            <input @bind-value="Endorsement.Description" class="form-control" />
                        </div>
                        <div class="col-lg-12">
                            <label class="text-center">Notas</label>
                            <textarea class="form-control" @bind="Endorsement.Notes"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>



