@inherits BondListBase
@page  "/bonds/list"


<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h4 class="mat-h4">Listo de Fianzas</h4>
        <a class="btn btn-blue waves-effect waves-light" href="bonds/create">
            <span class="btn-label">
                <i class="fas fa-plus"></i>
            </span>
            Agregar Fianza
        </a>
    </div>
</div>

<div class="card mat-elevation-z4">
    <div class="card-body">
        @if (Bonds == null)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-grow avatar-lg text-secondary m-2 text-center" role="status"></div>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-end align-items-center">

            </div>

            <table class="table table-responsive-lg table-responsive-md table-striped border" id="datable-init">
                <thead class="bg-blue text-white">
                    <tr>
                        <td>ID</td>
                        <td>Documento</td>
                        <td>Cliente</td>
                        <td>Compañia</td>
                        <td>Agente</td>
                        <td>Fecha de Expiracion</td>
                        <td>Prima Total</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Bonds)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.BondNumber</td>
                            <td>@item.Client</td>
                            <td>@item.Company</td>
                            <td>@item.Agent</td>
                            <td>@item.End.ToString("dd-MM-yyyy")</td>
                            <td></td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-blue dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Opciones <i class="mdi mdi-chevron-down"></i></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="bonds/details/@item.ID">Ver Fianza</a>
                                        <a class="dropdown-item">Eliminar</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

