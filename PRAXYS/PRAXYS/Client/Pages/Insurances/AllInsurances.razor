@inherits AllInsurancesBase
@page "/insurance/list"


<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h4 class="mat-h4">Todas las polizas</h4>
        <div class="btn-group">
            <button type="button" class="btn btn-blue dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Agregar Poliza <i class="mdi mdi-chevron-down"></i></button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="insurance/Create/1">Accidentes y Enfermedades</a>
                <a class="dropdown-item" href="insurance/Create/2">Daños</a>
                <a class="dropdown-item" href="insurance/Create/3">Vehiculos</a>
                <a class="dropdown-item" href="insurance/Create/4">Vida</a>
            </div>
        </div>
    </div>
</div>

@*
@if (InsuranceList != null)
{
    <MatAccordion>
        <MatExpansionPanel Expanded="true">
            <MatExpansionPanelSummary Class="border-bottom bg-ligth">
                <MatExpansionPanelHeader>Filtrar Polizas</MatExpansionPanelHeader>
            </MatExpansionPanelSummary>
            <MatExpansionPanelDetails>
                <div class="row">
                    <div class="form-group col-lg-3 col-12">
                        <label>Aseguradora</label>
                        <select class="form-control" @bind="InsuranceFilter.CompanyID">
                            <option selected value="0">Todos</option>
                            @foreach (var item in Companies)
                            {
                                <option value="@item.ID">
                                    @item.CompanyName
                                </option>
                            }
                        </select>
                    </div>

                    <div class="form-group col-lg-3 col-12">
                        <label>Cliente</label>
                        <select class="form-control" @bind="InsuranceFilter.ClientID">
                            <option selected value="0">Todos</option>
                            @foreach (var item in Clients)
                            {
                                <option value="@item.ID">
                                    @item.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="form-group col-12 d-flex justify-content-end align-items-end">
                        <button @onclick="FilterValues" class="btn btn-blue waves-effect waves-light" href="insurance">
                            <span class="btn-label">
                                <i class="fas fa-search"></i>
                            </span>
                            Filtrar
                        </button>
                    </div>
                </div>
            </MatExpansionPanelDetails>
        </MatExpansionPanel>
    </MatAccordion>
}
