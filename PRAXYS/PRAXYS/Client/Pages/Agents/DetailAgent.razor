@inherits DetailAgentBase
@page "/agents/detail/{AgentID:int}"

<div class="card mat-elevation-z4 animated fadeUpIn">
    <div class="card-body">
        @if (Agent != null)
        {
            <MatTabGroup Style="min-height:80vh;">
                <MatTab Label="Datos Generales">
                    <AgentForm ReadOnly="true" Agent="Agent"/>
                </MatTab>
                <MatTab Label="Polizas">
                    @if (AgentInsurances != null)
                    {
                        <div class="mt-2 animated fadeInLeft">
                            <ListInsurance Insurances="AgentInsurances"></ListInsurance>
                        </div>
                    }
                </MatTab>
                <MatTab Label="Fianzas">

                </MatTab>
            </MatTabGroup>
        }
    </div>
</div>
