@page "/payments/search"
@inherits PaymentInformationSearchBase

<div class="card mat-elevation-z4">
    <div class="card-header">
        Documento
    </div>
    <div class="card-body">
        <div class="col-12">
            <div class="row">
                <div class="col-lg-5">
                    <input type="text" @bind-value="InsuranceNumber" class="form-control" placeholder="Buscar documento"/>
                    <button class="btn btn-light">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card-box mat-elevation-z4">
    @if (Payments == null)
    {

    }
    else if (Payments.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No se ha encontrado ningun registro
        </div>
    }
    else
    {
        <table class="table table-striped  table-responsive-lg">
            <thead class="bg-blue text-white">
                <tr>
                    <th>ID</th>
                    <th>Numero de Poliza</th>
                    <th>Serie</th>
                    <th>Prima Total</th>
                    <th>Limite de Pago</th>
                    <th class="text-center">Estatus</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Payments)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@($"{item.InsuranceNumber} - {item.Insurance.EndorsementNumber}")</td>
                        <td class="text-info">@item.PaymentNumber</td>
                        <td>@item.Premium</td>
                        <td>@item.PaymentExpirationDate.ToString("dd-MM-yyyy")</td>
                        <td class="text-center @(item.Payed ? "text-success" : "text-warning")"><strong>@(item.Payed ? "Pagada" : "Pendiente")</strong></td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="/payments/receipt/@item.ID" class="btn btn-blue waves-effect waves-light">
                                    <i class="far fa-save"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>