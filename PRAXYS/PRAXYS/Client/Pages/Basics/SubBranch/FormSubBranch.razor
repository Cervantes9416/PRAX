@inherits FormSubBranchBase

    <EditForm Model="SubBranch" OnValidSubmit="OnValidSubmit">
        <div class="row">
            <div class="form-group col-lg-12">
                <label>Nombre Sub Ramo</label>
                <input class="form-control" @bind-value="SubBranch.Name" />
            </div>
            <div class="form-group col-lg-12">
                <label>Alias</label>
                <input class="form-control" type="text" @bind-value="SubBranch.Alias" />
            </div>
            <div class="form-group col-lg-12">
                <label>Ramo</label>
                <select class="form-control" @bind="SubBranch.RamoID">
                    <option value="1">Accidentes y Enfermedades</option>
                    <option value="2">Daño</option>
                    <option value="3">Vehiculos</option>
                    <option value="4">Vida</option>
                </select>
            </div>

            <div class="form-group col-lg-12">
                <label>Cuestionario de captura</label>
                <select class="form-control" @bind="SubBranch.InputForm">
                    <option value="Ninguno" selected>Ninguno</option>
                    <option value="Vehiculos">Vehiculos</option>
                    <option value="Accidente">Accidentes</option>
                    <option value="Vida">Vida</option>
                </select>
            </div>

            <div class="form-group col-12 text-center">
                <button class="btn btn-block btn-blue">Guardar Datos</button>
            </div>
        </div>
    </EditForm>
