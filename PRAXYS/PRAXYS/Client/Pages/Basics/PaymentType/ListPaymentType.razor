@page "/basics/payments"
@inherits ListPaymentTypeBase


<div class="row mb-2" @onclick="AddPayment">
    <div class="col-12 d-flex justify-content-end align-items-center">
        <button class="btn bg-blue" @onclick="@(async() => AddPayment())">
            Agregar tipo de pago
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card-box mat-elevation-z4">
            @if (PaymentTypes != null)
            {
                <button class="btn btn-light" @onclick="UpdateList">Actualizar registros</button>
                <table class="table table-striped table-responsive-lg">
                    <thead class="bg-blue text-white">
                        <tr>
                            <td>Tipo de pago</td>
                            <td>Numero de pagos</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in PaymentTypes)
                        {
                            <tr>
                                <td>@item.Description</td>
                                <td>@item.TotalPayments</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-light">Editar</button>
                                        <button class="btn btn-light" @onclick="@(() => Delete(item.ID))">Eliminar</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-grow avatar-lg text-secondary m-2 text-center" role="status"></div>
                </div>
            }
        </div>
    </div>
</div>
<CascadingValue Value="this">
    <BSModal @ref="Modal">
        <BSModalHeader OnClick="@(() => Modal.Hide())">Modal title</BSModalHeader>
        <BSModalBody>
            @ModalContent
        </BSModalBody>
    </BSModal>
</CascadingValue>


@code{
    RenderFragment ModalContent { get; set; }

    void AddPayment()
    {
        ModalContent =@<AddPaymentType />;
    Modal.Show();
    }
}