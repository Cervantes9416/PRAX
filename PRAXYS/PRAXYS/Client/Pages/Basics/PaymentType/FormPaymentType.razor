@inherits FormPaymentTypeBase

<EditForm Model="PaymentType" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="row">
        <div class="form-group col-12">
            <label>Descripcion</label>
            <input class="form-control" @bind-value="PaymentType.Description" />
            <ValidationMessage For="@(() => PaymentType.Description)" />
        </div>

        <div class="form-group col-lg-4">
            <label>Numero de Pagos</label>
            <input class="form-control" @bind-value="PaymentType.TotalPayments" />
            <ValidationMessage For="@(() => PaymentType.TotalPayments)" />
        </div>

        <div class="form-group text-center col-12">
            <button class="btn btn-block btn-blue">Enviar datos</button>
        </div>
    </div>
</EditForm>